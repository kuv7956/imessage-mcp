{
  "name": "@wyattjoh/imessage-mcp",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./src/index.ts",
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts",
      "deno.json",
      ".env.example"
    ],
    "exclude": ["tests/"]
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-sys --allow-run --allow-ffi --watch src/index.ts",
    "start": "deno run --allow-read --allow-env --allow-sys --allow-run --allow-ffi src/index.ts",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "build": "deno compile --allow-sys --allow-read --allow-write --allow-env --allow-run --allow-net --allow-ffi --output=imessage-mcp src/index.ts",
    "test": "deno test --allow-net"
  },
  "imports": {
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0",
    "zod": "npm:zod@^3.22.0",
    "@db/sqlite": "jsr:@db/sqlite@0.12.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
