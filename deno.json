{
  "workspace": ["packages/imessage", "packages/imessage-mcp"],
  "tasks": {
    "check": "deno check",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-net"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["packages/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
